check process influxd-meta
  with pidfile /var/vcap/sys/run/influxdb-meta/influxdb-meta.pid
  start program "/var/vcap/jobs/influxdb-meta/bin/init.sh start" with timeout 60 seconds
  stop program "/var/vcap/jobs/influxdb-meta/bin/init.sh stop" with timeout 60 seconds
  group vcap

check process telegraf
  with pidfile /var/vcap/sys/run/influxdb-meta/telegraf.pid
  start program "/var/vcap/jobs/influxdb-meta/bin/telegraf.init.sh start" with timeout 60 seconds
  stop program "/var/vcap/jobs/influxdb-meta/bin/telegraf.init.sh stop" with timeout 60 seconds
  group vcap
