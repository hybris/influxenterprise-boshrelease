reporting-disabled = false
bind-address = ""
hostname = "influxdb-meta-<%= spec.index %>"

[enterprise]
#registration server is the Web server of the cluster
  registration-enabled = true
  registration-server-url = "http://<%= p("influxdbcluster.influxdb-web")[0] %>:3000"
  license-key = "<%= p("influxdb.license-key") %>"
  license-path = "<%= p("influxdb-meta.license-path") %>"

[meta]
  dir = "<%= p("influxdb-meta.meta-dir") %>"
  bind-address = ":<%= p("influxdb-meta.metaport") %>"
  http-bind-address = ":<%= p("influxdb-meta.http-port") %>"
  https-enabled = <%= p("influxdb-meta.https-enabled") %>
  https-certificate = "<%= p("influxdb-meta.pem-path") %>"
  gossip-frequency = "5s"
  announcement-expiration = "30s"
  retention-autocreate = true
  election-timeout = "1s"
  heartbeat-timeout = "1s"
  leader-lease-timeout = "500ms"
  commit-timeout = "50ms"
  cluster-tracing = false
  raft-promotion-enabled = true
  logging-enabled = true
  pprof-enabled = false
  lease-duration = "1m0s"
