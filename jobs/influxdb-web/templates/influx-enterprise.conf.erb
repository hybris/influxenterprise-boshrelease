# This the "pretty" URL that end users will see for this app
#url = "<%= p("influxdb-web.prettyurl") %>" # ENV: URL
#or
url = "http://<%= p("influxdbcluster.influxdb-web")[0] %>:3000"


# This is the host and port you want to bind the application to.
hostname = "<%= p("influxdb-web.hostname") %>" # ENV: HOSTNAME
port = "<%= p("influxdb-web.port") %>" # ENV: PORT

# You need either a license key or a license file to run Enterprise Web
license-key = "<%= p("influxdb.license-key") %>" # ENV: LICENSE_KEY
# ENV: LICENSE_FILE
#license-file = "<%= p("influxdb.license-path") %>"
license-file = "/var/vcap/jobs/<%= spec.name %>/license/InfluxDB-Production.license"

[influxdb]
# The "shared-secret" let's us authenticate users between Enterprise Web
# and Enterprise Clustering.
shared-secret = "<%= p("influxdb.shared-secret") %>" # ENV: SHARED_SECRET

[smtp]
# Enterprise Web needs to be able to send emails to do things like
# invite users to the application.
host = "<%= p("influxdb-web.smtp-host") %>" # ENV: SMTP_HOST
port = "<%= p("influxdb-web.smtp-port") %>" # ENV: SMTP_PORT
username = "<%= p("influxdb-web.smtp-username") %>" # ENV: SMTP_USERNAME
password = "<%= p("influxdb-web.smtp-password") %>" # ENV: SMTP_PASSWORD
from_email = "<%= p("influxdb-web.smtp-fromemail") %>" # ENV: SMTP_FROM_EMAIL

[database]
# Where is your database?
# NOTE: This version of Enterprise Web currently only supports Postgres >= 9.3 or SQLite3
# url = "postgres://postgres:password@localhost:5432/enterprise" # ENV: DATABASE_URL
# url = "sqlite3:///var/lib/influx-enterprise/enterprise.db"
url = "<%= p("influxdb-web.database") %>"
