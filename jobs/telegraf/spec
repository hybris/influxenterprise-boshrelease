---
name: telegraf
templates:
  telegraf.conf.erb: config/telegraf.conf
  telegraf.init.sh.erb: bin/init.sh

packages:
  - telegraf

properties:
    telegraf.dc:
      description: DC tag - e.g. dc=us-east-1
      default: "test"
    telegraf.deployment:
      description: deployment tag - e.g. InfluxDB
      default: "test"
    telegraf.team:
      description: team name tag - e.g. Tollans
      default: "Idefix"

    USinfluxdbcluster.ELB:
      description: InfluxDB US cluster API ELB url and port
      default: "http://influxdb.us.tools.yaas.io:8086"
    USinfluxdbcluster.DB:
      description: InfluxDB US cluster DB name
      default: "influxcluster"
    USinfluxdbcluster.user:
      description: InfluxDB US cluster DB user
      default: ""
    USinfluxdbcluster.password:
      description: InfluxDB US cluster DB password
      default: ""

    EUinfluxdbcluster.ELB:
      description: InfluxDB EU cluster API ELB url and port
      default: "http://influx.eu-central.tools.yaas.io:8086"
    EUinfluxdbcluster.DB:
      description: InfluxDB EU cluster DB name
      default: "influxcluster"
    EUinfluxdbcluster.user:
      description: InfluxDB EU cluster DB user
      default: ""
    EUinfluxdbcluster.password:
      description: InfluxDB EU cluster DB password
      default: ""

    influxdbcluster.influxdb-data:
      description: list of ips of data nodes in the cluster
      default: []
